{
  "checkers": ["typescript"],
  "disableTypeChecks": true,
  "htmlReporter": { "fileName": "reports/mutation/mutation-api.html" },
  "ignorePatterns": [".*", "coverage", "dist", "reports"],
  "ignoreStatic": true,
  "logLevel": "info",
  "mutate": [
    "src/api/**/*.ts",
    "!src/**/*.test.ts",
    "!src/api/sentry/*.ts",
    "!src/api/swagger/*.ts",
    "!src/api/AppController.ts"
  ],
  "packageManager": "yarn",
  "reporters": ["html"],
  "testRunner": "vitest"
}
