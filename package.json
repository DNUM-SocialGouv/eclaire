{
  "name": "eclaire",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "UNLICENSED",
  "engines": {
    "node": "18.15"
  },
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "amibroken": "yarn dedupe --check && yarn typecheck && yarn lint && yarn test && yarn test:e2e",
    "bash:production": "scalingo -a eclaire-api run bash",
    "build": "yarn workspace eclaire-api build",
    "build:api": "yarn workspace eclaire-api build",
    "deadcode": "ts-prune --ignore 'dist'",
    "depcheck": "depcheck",
    "dev": "yarn workspace eclaire-api dev",
    "lint": "eslint \"apps/**/*.ts\" --max-warnings=0",
    "start": "yarn workspace eclaire-api start",
    "start:debug": "yarn workspace eclaire-api start:debug",
    "start:db": "yarn stop:db && docker-compose up -d",
    "stop:db": "docker-compose down",
    "test": "NODE_ENV=test vitest --run",
    "test:coverage": "yarn test --coverage",
    "test:e2e": "jest --config ./apps/eclaire-api/test/jest-e2e.json",
    "test:mutation": "npx stryker run",
    "typecheck": "tsc --noEmit --tsBuildInfoFile './.cache/.tsbuildinfo'",
    "transpile": "tsc -p tsconfig.mutation.json --noEmit --tsBuildInfoFile './.cache/.tsbuildinfo'"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@stryker-mutator/core": "^6.4.2",
    "@stryker-mutator/jest-runner": "^6.4.2",
    "@stryker-mutator/typescript-checker": "^6.4.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitest/coverage-istanbul": "^0.29.7",
    "depcheck": "^1.4.3",
    "eslint": "^8.36.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "29.3.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "ts-prune": "^0.10.3",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.9.5",
    "vitest": "^0.29.7"
  }
}
