{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "buildCommand": "tsc -p tsconfig.mutation.json",
  "checkers": ["typescript"],
  "logLevel": "info",
  "disableTypeChecks": true,
  "ignorePatterns": [".*", "coverage", "dist", "reports", "test"],
  "ignoreStatic": false,
  "jest": {
    "config": {
      "moduleFileExtensions": [
        "ts",
        "js"
      ],
      "testMatch": [
        "<rootDir>/src/**/*(*.)@(test).js"
      ]
    }
  },
  "mutate": [
    "src/**/*.ts",
    "!src/api/auth/*.ts",
    "!src/api/sentry/*.ts",
    "!src/api/swagger/*.ts",
    "!src/api/users/*.ts",
    "!src/etl/clinicalTrialIndexMapping.ts",
    "!src/etl/console.ts",
    "!src/shared/logger/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*Controller.ts",
    "!src/**/*TestingFactory.ts",
    "!src/main.ts",
    "!src/AppModule.ts"
  ],
  "packageManager": "npm",
  "reporters": ["html"],
  "testRunner": "jest"
}
