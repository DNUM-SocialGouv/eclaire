{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "buildCommand": "npm run transpile",
  "checkers": ["typescript"],
  "disableTypeChecks": true,
  "ignorePatterns": [".github", ".vscode", ".yarn", "coverage", "dist", "reports", "test"],
  "ignoreStatic": false,
  "jest": {
    "config": {
      "moduleFileExtensions": [
        "ts",
        "js"
      ],
      "testMatch": [
        "<rootDir>/src/**/*(*.)@(test).js"
      ]
    }
  },
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*-factory.ts",
    "!src/**/*.controller.ts",
    "!src/api/auth/*.ts",
    "!src/main.ts",
    "!src/app.*.ts",
    "!src/api/sentry/*.ts",
    "!src/api/swagger/*.ts"
  ],
  "packageManager": "npm",
  "reporters": ["html"],
  "testRunner": "jest"
}
